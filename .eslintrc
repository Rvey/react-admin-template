{
    "root": true,
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": ["plugin:react/jsx-runtime", "plugin:jsx-a11y/recommended", "plugin:react-hooks/recommended"],
    "settings": {
        "import/resolver": {
            "node": {
                "moduleDirectory": ["node_modules", "src/"]
            }
        }
    },
    "parser": "@babel/eslint-parser",
    "parserOptions": {
        "ecmaFeatures": {
            "experimentalObjectRestSpread": false,
            "impliedStrict": false
        },
        "ecmaVersion": 12
    },
    "plugins": ["react", "react-hooks"]
}
